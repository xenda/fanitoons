- if post
  %h2 
    %span= post.title 
  %h3
    - if post.published_at
      = l(post.published_at, :format=>:short)
    - else
      = l(post.created_at, :format=>:short)

  = image_tag (post.picture.url(:small_post)) if post.picture_file_name

  .show{:style=>"margin-top:30px"}
    .posts.block
      .content_box
        .post
          .body= truncate(simple_format(post.content),100)

  .clear