- if home_match
  - last = cycle(" last", "") # ? ? " last" : ""
  %div{:class =>"match block#{last}" }
    .date= time_ago_in_words(home_match.played_at)
    .match_players
      .local
        %strong= home_match.local.name
        %br
        = image_tag(random_flag)
      %strong.versus vs
      .visitor
        %strong= home_match.visitor.name  
        %br
        = image_tag(random_flag)
    
    = link_to "ver pronósticos", home_match
    - if account_signed_in?
      = link_to "deja tu pronóstico", match_prediction_path(home_match), :class=>"small iframe"