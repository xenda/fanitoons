    %tbody
      %tr.header
        %td.first Partido
        %td.flag
          = flag_image(own_prediction.match.local.flag_name,"small")
          = own_prediction.match.local.short_name
        %td.flag
          = flag_image(own_prediction.match.visitor.flag_name,"small")
          = own_prediction.match.visitor.short_name
