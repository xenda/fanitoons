%li{:class=>(cycle("odd","even"))}
  .meta
    %img.avatar{:alt => "", :height => "51", :src => "/images/missing.png", :width => "51"}/
    %p= last_prediction.account.name
    %p.title= last_prediction.account.title
  %table{:cellpadding => "0", :cellspacing => "0"}
    %tbody
      %tr.header
        %td.first Partido
        %td
          .flag.small{:class=>last_prediction.match.local.flag_name}= last_prediction.match.local.short_name
        %td
          .flag.small{:class=>last_prediction.match.visitor.flag_name}= last_prediction.match.visitor.short_name
      %tr
        %td.first goles
        - local_goals = last_prediction.first_team_result || "--"
        - visitor_goals = last_prediction.second_team_result || "--"
        %td{:class=>("win" if last_prediction.local_winner?)}= local_goals
        %td{:class=>("win" if last_prediction.visitor_winner?)}= visitor_goals
