- semantic_form_for ["admin",@avatar] do |form|
  - form.inputs do
    = form.input :id
    = form.input :account
    = form.input :shirt
    = form.input :short
    = form.input :snicker
    = form.input :shirt_rotation
    = form.input :short_rotation
    = form.input :snicker_rotation
    = form.input :shirt_scale
    = form.input :short_scale
    = form.input :snicker_scale
    
  - form.buttons do
    = form.commit_button 'Grabar',:button_html => { :class => "submit" }