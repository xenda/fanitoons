- @title = "Viendo avatar"

#admin

  %h1 "Viendo avatar"

  - show_for @avatar do |a| 
    = a.attribute :id
    = a.attribute :account
    = a.attribute :shirt
    = a.attribute :short
    = a.attribute :snicker
    

  .bottom_menu
    = link_to "Ver todos", admin_avatars_path
    = link_to "Editar avatar",  edit_admin_avatar_path(avatar)
    = link_to "Crear otro", new_admin_avatar_path
