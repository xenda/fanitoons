- @title = "Administración Medallas "

#admin.index
  %h1= "Administrando Medallas"

  #admin_menu
    = link_to "Nueva medalla", new_admin_badge_path

  %table{:id=>"badges_table"}
    %thead
      %tr
        %td Id
        %td Nombre
        %td Descripción
        %td Tipo
        %td
        %td
    %tbody
    - @badges.each do |badge|
      %tr{:class=>cycle('even','odd') }
        %td= badge.id
        %td= badge.name
        %td= summary badge.description
        %td= badge.type
        %td= link_to 'Editar', edit_admin_badge_path(badge)
        %td= link_to 'Eliminar', ["admin",badge], :confirm => '¿Estas seguro? Se borraran todos los datos relacionados', :method => :delete
      
  .pagination= will_paginate @badges