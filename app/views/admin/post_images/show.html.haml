- @title = "Viendo #{I18n.t 'activerecord.models.post_image'}"

#admin

  %h1= "Viendo #{I18n.t 'activerecord.models.post_image'}"

  - show_for @post_image do |a| 
    = a.attribute :id
        = a.attribute :post
        = a.attribute :picture_file_name
        = a.attribute :picture_content_type
        = a.attribute :picture_file_size
        = a.attribute :picture_updated_at
    

  .bottom_menu
    = link_to "Ver todos", admin_post_images_path
    = link_to "Editar #{I18n.t 'activerecord.models.post_image'}",  edit_admin_post_image_path(post_image)
    = link_to "Crear otro", new_admin_post_image_path
