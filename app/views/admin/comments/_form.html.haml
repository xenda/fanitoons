- semantic_form_for ["admin",@comment] do |form|
  - form.inputs do
    = form.input :id
    = form.input :post
    = form.input :title
    = form.input :content
    = form.input :email
    = form.input :user
    = form.input :website
    = form.input :commentable
    = form.input :commentable_type
    
  - form.buttons do
    = form.commit_button 'Grabar',:button_html => { :class => "submit" }