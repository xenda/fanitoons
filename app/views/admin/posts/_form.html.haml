#post_form
  - semantic_form_for (["admin",@post], :html=>{:multidata => true}) do |form|
    - form.inputs do
      = form.input :title, :label => "Título"      
      = form.input :picture, :label => "Foto portada"      
      = form.input :content, :label => "Contenido", :input_html => {:class => "tinymce"}      
      = form.input :published_at, :label => "Fecha publicación"
      = form.input :admin, :label => "Autor",:label_method=>:email
  
    - form.buttons do
      = form.commit_button 'Grabar',:button_html => { :class => "submit" }
    

#post_images
  %iframe{:src=>post_images_path, :height => "800px", :width => "400"}
  
%div{:style=>"clear:both;"}