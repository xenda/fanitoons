!!! Strict
%html
  %head
    %title= [@title, "Patatoon"].compact.join(" | ")
    = stylesheet_link_tag 'reset', '../javascripts/fancybox/jquery.fancybox-1.3.1','style', 'formtastic_changes','admin_style'
    = yield :include
        
  %body{:class=>controller.controller_name}
    #header
      #header_content
        %h1= link_to "Patatoon", root_path
        %ul.menu
          %li= link_to 'Inicio', root_path
          = display_app_models_links

    - if admin_signed_in?
      #logged_as
        = "Iniciada sesi√≥n como"
        = current_admin.email
        = link_to "salir", destroy_admin_session_path
          

          
    #container
      
      = yield :main_banner
    
      #main
        = yield
      #sidebar
        = yield :sidebar

    #footer
      Copyright (c)
    = javascript_include_tag 'jquery', 'jrails','fancybox/jquery.fancybox-1.3.1.pack','fancybox/jquery.easing-1.3.pack','fancybox/jquery.mousewheel-3.0.2.pack','tiny_mce/tiny_mce','tiny_mce/jquery.tinymce','editor_loader','application'